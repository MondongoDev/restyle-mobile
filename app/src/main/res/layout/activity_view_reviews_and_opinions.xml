<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SeeReviewsAndOpinions">

    <!-- Init Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:paddingTop="15dp"
            android:backgroundTint="#3F51B5">

            <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Restyle Logo"
                android:src="@drawable/restyle_logo" />

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="ReStyle"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Space
                android:layout_width="220dp"
                android:layout_height="wrap_content"/>

            <!--User Picture in Toolbar-->
            <ImageView
                android:id="@+id/toolbar_client"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="User Picture"
                android:src="@drawable/user"
                android:visibility="visible"/>

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>
    <!-- End Toolbar -->

    <!-- Init Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Project Title -->
            <TextView
                android:id="@+id/project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="RenovaPro"
                android:textColor="#3F51B5"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <!-- Project Image -->
            <ImageView
                android:id="@+id/project_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/picture"
                android:scaleType="centerCrop"/>

            <!-- Project Description -->
            <TextView
                android:id="@+id/project_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
